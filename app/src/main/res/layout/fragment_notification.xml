<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Frontend.Fragment.NotificationFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/notificationToolbar"
        app:title="@string/notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/light_primary_color"
        app:navigationIcon="@drawable/car_ui_icon_arrow_back" />

    <RadioGroup
        android:id="@+id/notificationRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp">

        <RadioButton
            android:id="@+id/notificationRadioButtonOn"
            android:text="@string/on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/notificationRadioButtonOff"
            android:text="@string/off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp" />

    </RadioGroup>

</FrameLayout>