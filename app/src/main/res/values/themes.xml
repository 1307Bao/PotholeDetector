<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PotholeDetector" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:colorPrimary">@color/light_primary_color</item>
        <item name="colorPrimary">@color/light_primary_color</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/light_main_background_color</item>
        <item name="backgroundColor">@color/light_main_background_color</item>
        <item name="subBackgroundColorGray">@color/light_sub_background_color_gray</item>
        <item name="subBackgroundColorBlue">@color/light_sub_background_color_blue</item>
        <item name="chartBorderColor">@color/light_chart_border_color</item>

        <!-- Text colors -->
        <item name="mainTextColor">@color/light_main_text_color</item>
        <item name="subTextColor">@color/light_sub_text_color</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/light_main_background_color</item>

        
        <!-- Chart colors -->
        <item name="chartBarColor">@color/light_primary_color</item>
        <item name="chartTextColor">@color/light_main_text_color</item>
        <item name="chartBackgroundColor">@color/white</item>

        <!-- Launcher icon background color -->
        <item name="icLauncherBackgroundColor">@color/light_ic_launcher_background</item>

    </style>

    <style name="Theme.PotholeDetector" parent="Base.Theme.PotholeDetector" />

    <!-- Custom attributes -->
    <attr name="backgroundColor" format="color" />
    <attr name="subBackgroundColorGray" format="color" />
    <attr name="subBackgroundColorBlue" format="color" />
    <attr name="mainTextColor" format="color" />
    <attr name="subTextColor" format="color" />
    <attr name="chartBorderColor" format="color" />

    <attr name="chartBarColor" format="color" />
    <attr name="chartTextColor" format="color" />
    <attr name="chartBackgroundColor" format="color" />
    <attr name="icLauncherBackgroundColor" format="color" />

    
</resources>